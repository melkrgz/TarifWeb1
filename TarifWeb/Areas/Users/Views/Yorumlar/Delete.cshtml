@model TarifWeb.Models.Yorum

@{ ViewData["Title"] = "Delete";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Yorum Sil</h1>

<h3>Yorumu Silmek İstediğinizden Emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Yorum Başlığı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YorumBasligi)
        </dd>
        <dt class="col-sm-2">
            Yorum Açıklaması
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YorumAciklama)
        </dd>
        <dt class="col-sm-2">
            Yorumun Ait Olduğu Yemek
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Yemek.YemekAd)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="YorumId" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Geri Dön</a>
    </form>
</div>
