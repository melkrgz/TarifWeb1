@model TarifWeb.Models.Yorum

@{ ViewData["Title"] = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<h1>Yorum Ekle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Yemek Adı
                <select asp-for="YemekId" class="form-control" asp-items="ViewBag.YemekId"></select>
            </div>
            <div class="form-group">
                Yorum Başlığı
                <input asp-for="YorumBasligi" class="form-control" />
                <span asp-validation-for="YorumBasligi" class="text-danger"></span>
            </div>
            <div class="form-group">
                Yorum Açıklaması
                <input asp-for="YorumAciklama" class="form-control" />
                <span asp-validation-for="YorumAciklama" class="text-danger"></span>
            </div>
            <div class="form-group">

                Puan Ver <br />
                <div style="float:left" id="rateYo"></div>
                <input type="hidden" asp-for="YemekDerecesi" id="rating" value="" class="form-control" />
                <span asp-validation-for="YemekDerecesi" class="text-danger"></span><br />
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Geri Dön</a>
</div>


<script>$(function () {

        $("#rateYo").rateYo({
            onSet: function (rating, rateYoInstance) {
                $('#rating').val(rating);
            }
        });
    });</script>
